<h1>Welcome to Ingredients Edit Form</h1>

<%= form_for @ingredient do |f| %>
  
  <%= f.label 'Name of Ingredient' %>
  <%= f.text_field :name %></br>
  </br>
  <%= f.label 'Calories' %>
  <%= f.number_field :calories %></br>
  </br>
  <%= f.label 'Fats' %>
  <%= f.number_field :fats %></br>
  </br>
  <%= f.label 'Carbohydrates' %>
  <%= f.number_field :carbohydrates %></br>
  </br>
  <%= f.label 'Protein' %>
  <%= f.number_field :protein %></br>
  </br>
  <%= f.submit 'Update Ingredient' %>

<% end %>
</br>
<button><%= link_to 'Delete this Ingredient', ingredient_path(@ingredient), method: :delete %></button>

 