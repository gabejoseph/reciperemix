<h1>Welcome to the New Ingredients Form</h1>
<%= form_for @ingredients do |f| %>
  <% if @ingredients.errors.any? %>
    <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
            <% @ingredients.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
  <div class="field<%= ' field_with_errors' if @ingredients.errors[:name].any? %>">
  <%= f.label 'Name of Ingredient' %>
  <%= f.text_field :name %></br>
  </div>
  </br>
  <%= f.label 'Calories' %>
  <%= f.number_field :calories %></br>
  </br>
  <%= f.label 'Fats' %>
  <%= f.number_field :fats %></br>
  </br>
  <%= f.label 'Carbohydrates' %>
  <%= f.number_field :carbohydrates %></br>
  </br>
  <%= f.label 'Protein' %>
  <%= f.number_field :protein %></br>
  </br>
  <i>Select one of your recipe's to add this ingredient to it</i></br>
  <%= f.collection_select :recipes, @recipe, :name, :name, {include_blank: 'Select a Recipe'} %></br>
  </br>
  <%= f.submit 'Add Ingredient To Recipe' %>

<% end %>

 