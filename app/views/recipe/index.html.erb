<h1>All Recipes</h1>

<% if !@all_recipes.empty? %>
    <% @all_recipes.each do |recipe| %>
        <%= recipe.name %></br>
    <% end %>
<% end %>

<h1>My Recipes</h1>
<% if !@user_recipes.nil? %>
    <% @user_recipes.each do |recipe| %>
        <%= link_to recipe.name, user_recipe_path(id: recipe.id) %></br>
    <% end %>
<% end %>

<p><%= link_to "Create a Recipe!", new_user_recipe_path(user_id: @user.id) %></p>

<p><%= link_to "Create an Ingredient!", ingredients_path %></p>
