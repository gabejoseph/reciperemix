<%= form_for @recipe, url: "/recipe", method: :post do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
        <h2>There were some errors:</h2>
        <ul>
            <% @recipe.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
  <div class="field<%= ' field_with_errors' if @recipe.errors[:name].any? %>">
  <%= f.label 'Name of Recipe' %></br>
  <%= f.text_field :name %></br>
  </div>
  </br>
  <div class="field<%= ' field_with_errors' if @recipe.errors[:name].any? %>">
  <%= f.label 'Write out your recipe here' %></br>
  <%= f.text_area :content %></br>
  </div>
  </br>
  <div class="field<%= ' field_with_errors' if @recipe.errors[:name].any? %>">
  <i>Select one of your ingredients's to add this recipe to it</i></br>
  <%= f.collection_select :ingredient, Ingredient.all, :name, :name, {include_blank: 'Select an Ingredient'} %></br>
  </div>
  </br>
  <%= f.submit %>

<% end %>

</br>
<button><%= link_to "Create an Ingredient!", ingredients_path %></button></br>
</br>
<button><%= link_to "Logout", '/logout' %></button>
